<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Arabam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_color</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Arabam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Arabam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Arabam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Arabam.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
        <item name="cornerRadius">@dimen/dimen_8</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:theme">@style/Theme.MaterialComponents</item>
    </style>

    <style name="Theme.Arabam.InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:drawablePadding">@dimen/dimen_8</item>
        <item name="boxStrokeColor">@color/primary_color</item>
        <item name="android:layout_margin">@dimen/dimen_8</item>
        <item name="hintTextColor">@color/primary_color</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="endIconTint">@color/primary_color</item>
        <item name="endIconMode">clear_text</item>
    </style>


    <style name="Theme.Arabam.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primary_color</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedCornersDialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">16dp</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


</resources>
