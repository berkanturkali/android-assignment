<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="cornerRadius">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="inputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:drawablePadding">@dimen/padding</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="endIconTint">@color/primaryColor</item>
        <item name="endIconMode">clear_text</item>
    </style>


    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/primaryColor</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>