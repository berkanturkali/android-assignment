<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Arabam" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Arabam.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Arabam.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Arabam.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="inputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:drawablePadding">@dimen/padding</item>
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="endIconTint">@color/primaryColor</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="cornerRadius">0dp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>